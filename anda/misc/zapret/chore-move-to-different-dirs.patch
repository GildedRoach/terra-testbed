+DVTWS=${DVTWS:-${ZAPRET_BINARIES}/dvtws}
+WINWS=${WINWS:-${ZAPRET_BINARIES}/winws}
+TPWS=${TPWS:-${ZAPRET_BINARIES}/tpws}
+MDIG=${MDIG:-${ZAPRET_BINARIES}/mdig}
